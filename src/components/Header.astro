---
interface Link {
    text: string;
    href: string;
}

interface Props {
    logo: string;
    siteName: string;
    links: Link[];
}

const { logo, siteName, links } = Astro.props;
---

<div class="header-styled">
    <div class="header-content">
        <a href="/" class="logo">
            <img src={logo} alt="Open Foundation logo" />
            <p class="title">{siteName}</p>
        </a>
        <div class="links">
            {links.map((link) => <a href={link.href}>{link.text}</a>)}
        </div>
    </div>
</div>

<style type="sass">
    .header-styled {
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        height: 12dvh;

        border-bottom: 1px solid #d8d8d8;

        position: fixed;
        top: 0;

        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;

            width: 850px;
            height: 100%;

            .logo {
                display: flex;
                align-items: center;
                gap: 1rem;

                text-decoration: none;
                color: #000;

                img {
                    width: 10%;
                }

                .title {
                    width: min-content;
                    font-size: 1.2rem;
                    font-weight: 600;
                }
            }

            .links {
                display: flex;
                align-items: center;
                gap: 1rem;

                a {
                    text-decoration: none;
                    color: #000;

                    &:hover,
                    &:active {
                        color: #6b2aa1;
                    }
                }
            }
        }
    }
</style>
