---
interface Props {
    href?: string;
}

const { href } = Astro.props;
---

<a class="styled-buttonlink" href={href}>
    <slot />
</a>

<style type="sass">
    .styled-buttonlink {
        background: #9956c0;
        color: #fff;

        padding: 0.75rem 1.25rem;
        border-radius: 0.15rem;

        transition: all 0.2s;

        &:hover {
            box-shadow: inset 0 0 999px 100px rgba(0, 0, 0, 0.1);
        }
    }
</style>
